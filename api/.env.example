# Production Environment Variables for Pint API
# Copy this file to .env in production and fill in the actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/pint_production
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pint_production
DB_USER=pint_user
DB_PASSWORD=your_secure_password

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_change_this_in_production

# Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Application
NODE_ENV=production
PORT=3000

# Security
CORS_ORIGIN=https://your-production-domain.com

# Stripe (if using subscription features)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Google Maps (if using location features)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Database Seeding (Required for initial setup)
# Default admin user credentials - CHANGE THESE IN PRODUCTION
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=ChangeThisSecurePassword123!
ADMIN_DISPLAY_NAME=Platform Administrator

# Additional Production Configuration
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session management
SESSION_SECRET=your_session_secret_key

# File uploads (if applicable)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/uploads

# Email service (if using email notifications)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_email_service_api_key
EMAIL_FROM=noreply@yourcompany.com